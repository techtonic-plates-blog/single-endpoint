# Nginx Reverse Proxy Configuration
# Copy this file to .env and customize the values

# Service endpoints (internal container network)
AUTH_SERVICE_HOST=auth
AUTH_SERVICE_PORT=3001

ASSETS_SERVICE_HOST=assets
ASSETS_SERVICE_PORT=3002

COLLECTIONS_SERVICE_HOST=collections
COLLECTIONS_SERVICE_PORT=3003

GRAPHQL_SERVICE_HOST=graphql
GRAPHQL_SERVICE_PORT=3004

# External ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Domain configuration
SERVER_NAME=localhost

# Rate limiting (requests per second)
API_RATE_LIMIT=10
AUTH_RATE_LIMIT=5

# File upload limits
MAX_BODY_SIZE=100M

# Timeout settings (seconds)
PROXY_CONNECT_TIMEOUT=30
PROXY_SEND_TIMEOUT=30
PROXY_READ_TIMEOUT=30

# CORS settings
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range,Authorization
